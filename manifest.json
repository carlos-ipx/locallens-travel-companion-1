{
  "manifest_version": 3,
  "name": "LocalLens Travel Companion",
  "version": "1.0.0",
  "description": "Automatically captures and organizes travel documents, builds an encrypted itinerary, and provides real-time local experience recommendations.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "downloads",
    "geolocation"
  ],
  "host_permissions": [
    "https://*.booking.com/*",
    "https://*.expedia.com/*",
    "https://*.airbnb.com/*",
    "https://*.skyscanner.com/*",
    "https://*.hostelworld.com/*",
    "https://*.delta.com/*",
    "https://*.united.com/*",
    "https://*.aa.com/*",
    "https://*.kayak.com/*",
    "https://*.priceline.com/*",
    "https://*.rentalcars.com/*",
    "https://*.enterprise.com/*",
    "https://your-worker-name.your-account.workers.dev/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.booking.com/*",
        "https://*.expedia.com/*",
        "https://*.airbnb.com/*",
        "https://*.skyscanner.com/*",
        "https://*.hostelworld.com/*",
        "https://*.delta.com/*",
        "https://*.united.com/*",
        "https://*.aa.com/*",
        "https://*.kayak.com/*",
        "https://*.priceline.com/*",
        "https://*.rentalcars.com/*",
        "https://*.enterprise.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LocalLens Companion",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "optionspage.html",
  "web_accessible_resources": [
    {
      "resources": [
        "sidebarui.html",
        "styles/sidebar.css",
        "styles/sidebarRecommendationsMap.css",
        "lib/leaflet.js",
        "lib/leaflet.css"
      ],
      "matches": [
        "https://*.booking.com/*",
        "https://*.expedia.com/*",
        "https://*.airbnb.com/*",
        "https://*.skyscanner.com/*",
        "https://*.hostelworld.com/*",
        "https://*.delta.com/*",
        "https://*.united.com/*",
        "https://*.aa.com/*",
        "https://*.kayak.com/*",
        "https://*.priceline.com/*",
        "https://*.rentalcars.com/*",
        "https://*.enterprise.com/*"
      ]
    }
  ]
}
