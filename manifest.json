{
  "manifest_version": 3,
  "name": "LocalLens Travel Companion",
  "version": "1.0.0",
  "description": "Automatically captures and organizes travel documents, builds an encrypted itinerary, and provides real-time local experience recommendations.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "https://*.booking.com/*",
    "https://*.expedia.com/*",
    "https://*.airbnb.com/*",
    "https://*.skyscanner.com/*",
    "https://*.hostelworld.com/*",
    "https://*.delta.com/*",
    "https://*.united.com/*",
    "https://*.aa.com/*",
    "https://*.kayak.com/*",
    "https://*.priceline.com/*",
    "https://*.rentalcars.com/*",
    "https://*.enterprise.com/*",
    "https://mail.google.com/*",
    "https://outlook.office.com/*",
    "https://outlook.live.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.booking.com/*",
        "https://*.expedia.com/*",
        "https://*.airbnb.com/*",
        "https://*.skyscanner.com/*",
        "https://*.hostelworld.com/*",
        "https://*.delta.com/*",
        "https://*.united.com/*",
        "https://*.aa.com/*",
        "https://*.kayak.com/*",
        "https://*.priceline.com/*",
        "https://*.rentalcars.com/*",
        "https://*.enterprise.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "emailParserContentScript.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popupSearchQuickAccess.html", // <<< THIS LINE IS UPDATED
    "default_title": "LocalLens Companion",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "styles/sidebar.css",
        "styles/sidebarRecommendationsMap.css"
      ],
      "matches": [
        "https://*.booking.com/*",
        "https://*.expedia.com/*",
        "https://*.airbnb.com/*",
        "https://*.skyscanner.com/*",
        "https://*.hostelworld.com/*",
        "https://*.delta.com/*",
        "https://*.united.com/*",
        "https://*.aa.com/*",
        "https://*.kayak.com/*",
        "https://*.priceline.com/*",
        "https://*.rentalcars.com/*",
        "https://*.enterprise.com/*",
        "https://mail.google.com/*"
      ]
    }
  ],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_OAUTH_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
}
